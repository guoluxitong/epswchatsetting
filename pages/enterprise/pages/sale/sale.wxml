<view>
	<view style="margin-top:10px;margin-bottom:10px;padding-left:10px;padding-right:10px">
		<input style="border:1px solid #efefef; display: flex; " value="{{conent}}" placeholder="输入地址进行搜索" bindinput="addressInput" />
		<button class="quenyButton1" bindtap="atuoGetLocation">搜索</button>
	</view>
</view>

